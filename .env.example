# Sample .env file for TikTok Automation System

# ===================
# GeeLark API Config
# ===================
# Authentication method: TOKEN or KEY
GEELARK_AUTH_METHOD=TOKEN

# For TOKEN auth (simpler - personal use)
GEELARK_APP_TOKEN=your_bearer_token_from_geelark_dashboard

# For KEY auth (more secure)
# GEELARK_APP_ID=your_app_id
# GEELARK_API_KEY=your_api_key

# GeeLark API Base URL
GEELARK_API_BASE_URL=https://openapi.geelark.com/open/v1

# ===================
# Database
# ===================
# SQLite for local development
DATABASE_URL=sqlite:///./data/tiktok_automation.db

# PostgreSQL for production (Render)
# DATABASE_URL=postgresql://user:password@host:5432/dbname

# ===================
# Application
# ===================
SECRET_KEY=change-this-to-a-secure-random-string
LOG_LEVEL=INFO
DEBUG=false

# ===================
# Automation Settings
# ===================
WARMUP_DAYS=5
VIDEO_STORAGE_PATH=./data/videos

# ===================
# Dashboard (Streamlit)
# ===================
API_BASE_URL=http://localhost:8000/api

# ===================
# SMS Verification (HeroSMS primary, SMSPool backup)
# ===================
# HeroSMS (primary): https://hero-sms.com
HEROSMS_API_KEY=your_herosms_api_key

# SMSPool (backup - better TikTok availability): https://smspool.net
# Optional: If HeroSMS has no stock, SMSPool will be used as fallback
SMSPOOL_API_KEY=your_smspool_api_key

# ===================
# GeeLark Canvas Flows (RPA Automation)
# ===================
# Create these flows in GeeLark Dashboard > Automation > Custom Flows
# Copy the Flow ID from the URL or flow details after creation

# TikTok Phone Registration Flow
# Input variables: PHONE_NUMBER, USERNAME, PASSWORD
# Flow: Open TikTok > Sign Up > Phone > Enter number > Wait for SMS > Enter code > Set username/password
GEELARK_TIKTOK_REGISTER_FLOW_ID=

# TikTok Teamwork Warmup Flow (optional)
# Input variables: SEARCH_KEYWORDS, DURATION_MINUTES
# Flow: Open TikTok > Search keywords > Watch videos > Like/comment randomly
GEELARK_TIKTOK_WARMUP_FLOW_ID=

# ===================
# Video Generation (kie.ai + Claude)
# ===================
# Kie.ai API key for Nano Banana Pro (images) and Seedance 1.5 Pro (videos)
# Get your key at: https://kie.ai/api-key
KIE_API_KEY=your_kie_api_key

# Claude API key for creative prompt generation
# Get your key at: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=your_anthropic_api_key

# Freesound.org API key for auto-fetching trending background music
# Register free at: https://freesound.org/apiv2/apply/
FREESOUND_API_KEY=your_freesound_api_key

# Pexels API key for FREE stock footage backgrounds (city night, nature, etc.)
# Register free at: https://www.pexels.com/api/
PEXELS_API_KEY=your_pexels_api_key

# Residential proxy for YouTube downloading (bypasses datacenter IP blocks)
# Format: socks5://username:password@host:port
# Example with Proxiware: socks5://user-default-network-res-country-us:PASSWORD@proxy.proxiware.com:1337
YOUTUBE_PROXY=

# Video output directory (auto-detects /var/data on Render persistent disk)
VIDEO_OUTPUT_DIR=./generated_videos
